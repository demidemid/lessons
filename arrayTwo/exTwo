<html>

<body>
  <script>
    'use strict';
    function camelize(str) {
      var arr = str.split('-');

      //alert(arr);

      for (var i = 1; i < arr.length; i++) {
        // преобразовать: первый символ с большой буквы
        arr[i] = arr[i].charAt(0).toUpperCase() + arr[i].slice(1);

        //alert(arr[0]);
        alert(arr[0].charAt(0).toUpperCase());
        alert(arr[0].slice(1));
        //alert(arr[3]);

    }

      return arr.join('');
    }

    alert( camelize("list-style-image") ); // backgroundColor

  </script>
</body>

</html>
