<html>
<body>
<script>
'use strict'

function formatDate(date) {
  var options = {
   year: 'numeric',
   month: 'numeric',
   day: 'numeric'
 };
 return date.toLocaleString("ru", options);
};

var d = new Date(2001, 0, 1); // 30 января 2014
alert( formatDate(d) ); // '30.01.14'

</script>
</body>
</html>
